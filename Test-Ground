Declare Sub Sleep Lib "kernel32" (ByVal dwMilliseconds As Long)
Option Compare Text


Sub SlightDelay()

Dim i As Long
 For i = 1 To 3
 Debug.Print Now()
 Sleep 1
 Next i

End Sub




Sub ABCRapid_Click()

'Make ABCDE
Range("B25").Value = "A"
Call SlightDelay
Range("B26").Value = "B"
Call SlightDelay
Range("B27").Value = "C"
Call SlightDelay
Range("B28").Value = "D"
Call SlightDelay
Range("B29").Value = "E"
Call SlightDelay

Application.Wait Now + TimeValue("00:00:02")

'Remove
Range("B25:B29").Clear
End Sub



Option Compare Text


Sub BoxMatch_Click()

Dim Match As Boolean

If Range("BoxMatch1").Value = Range("BoxMatch2").Value Then
Match = True
Else
Match = False
End If

If Match = True Then MsgBox "The Values Match"
If Match = False Then MsgBox "The Values Don't Match"



End Sub

Sub RefreshCurrent_Click()

'Refresh days
ActiveSheet.Calculate

'Calculate current values
Dim i As Long
i = Range("B6").Value
Range("C2").Value = Cells(2, 5 + i)
Range("C3").Value = Cells(3, 5 + i)
Range("C4").Value = Cells(4, 5 + i)
ActiveSheet.Calculate



End Sub


Sub OneToTen_Click()

Dim i As Long
For i = 1 To 10
Cells(28 + i, 10) = i
Call SlightDelay
Next i


Application.Wait Now + TimeValue("00:00:01")
Range("J29:J38").Clear

End Sub



Sub TurnRed_Click()

Dim i As String

i = Range("C38").Value

If i = "Red" Then
Range("C38").Font.Color = RGB(255, 0, 0)
Else
Range("C38").Font.Color = RGB(0, 0, 0)
End If


End Sub







